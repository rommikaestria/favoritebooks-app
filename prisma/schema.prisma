
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // kita ambil dari file .env
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String
  books    Book[]
}

model Book {
  id      String @id @default(cuid())
  title   String
  author  String
  year    Int
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}

